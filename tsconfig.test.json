{
  "compilerOptions": {
    "target": "ESNext",

    "baseUrl": "./",
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": {
      "@/env": ["./src/env.ts"],
      "@/utils/*": ["./src/utils/*"],
      "@/middlewares/*": ["./src/server/middlewares/*"],
      "@/wechat": ["src/wechat/index.ts"],
      "@/wechatMp": ["src/wechat/mp/index.ts"],
      "@/siYuan": ["src/siyuan/index.ts"],
      "@/wechatCorp": ["src/wechat/corp/index.ts"]
    },
    "strict": true,
    "declaration": true,
    // "rootDir": "./",
    "outDir": "./dist",
    "sourceMap": true,
    // "paths": {},
    // "allowJs": true,

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["index.ts", "src/**/*", "test/**/*"],
  "exclude": ["dist"]
}
