{
  "name": "@s4p/smdb",
  "type": "module",
  "version": "0.0.3",
  "description": "Subset of MongoDB's API (the most used operations)",
  "homepage": "https://github.com/demoshang/smdb",
  "repository": {
    "type": "git",
    "url": "https://github.com/demoshang/smdb.git"
  },
  "keywords": [
    "database",
    "datastore",
    "MongoDB",
    "nedb"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "node --loader @swc-node/register/esm index.ts",
    "test": "SWC_NODE_PROJECT=./tsconfig.test.json node --test --loader @swc-node/register/esm \"test/smdb.test.ts\"",
    "test:coverage": "SWC_NODE_PROJECT=./tsconfig.test.json node --test --experimental-test-coverage --test-reporter=lcov --test-reporter-destination=.tmp/lcov.info --loader @swc-node/register/esm \"test/**/*.test.ts\" && genhtml .tmp/lcov.info -o .tmp/html && http-server .tmp/html -o",
    "watch": "nodemon --signal SIGHUP",
    "build": "pnpm run clean && concurrently npm:build:*",
    "build:bundle": "tsup index.ts --treeshake --sourcemap --shims --format esm,cjs --dts",
    "build:copy": "cpx README.md dist/ && cat package.json | jq '{name,type,version,description,homepage,repository,exports,main,types,dependencies,keywords,module:.module} | walk(if type == \"string\" and contains(\"./dist/\") then gsub(\"./dist/\"; \"./\") else . end)' > dist/package.json",
    "clean": "rimraf dist",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "prettier": "prettier '**/*.{ts,json,md}'",
    "prettier:fix": "prettier --write '**/*.{ts,json,md}'"
  },
  "dependencies": {
    "@s4p/nedb": "^1.0.2",
    "mongodb": "^6.8.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^2.16.0",
    "@swc-node/register": "1.6.5",
    "@swc/cli": "^0.3.12",
    "@swc/core": "1.3.69",
    "@types/node": "^20.14.6",
    "concurrently": "^8.2.0",
    "cpx2": "^5.0.0",
    "eslint": "^9.1.1",
    "eslint-plugin-format": "^0.1.1",
    "http-server": "^14.1.1",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "volta": {
    "node": "22.3.0",
    "pnpm": "9.4.0"
  }
}
